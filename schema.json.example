{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Document Property Extraction Schema",
  "description": "Defines the properties to extract from documents using AWS Bedrock",
  "type": "object",
  "properties": {
    "document_title": {
      "type": "string",
      "description": "This is the title of the document. It should be contained in the document text itself, and is NOT the filename of the document.",
      "always_include": true
    },
    "document_summary": {
      "type": "string",
      "description": "This is a brief summary of the document. It should describe the meaning and purpose of the document. It should be no more than 500 characters in length.",
      "always_include": true
    }
  },
  "required": ["document_title"]
}
